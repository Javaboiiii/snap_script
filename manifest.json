{
    "name": "Youtube Transcript Summarizer",
    "version": "1.0",
    "description": "An extension that enables Transcript of Youtube videos",
    "manifest_version": 3,
    
    "background" :{
        "service_worker" :"background.js",
        "type" : "module"
    },
    "action" : {
        "default_popup" : "popup.html", 
        "default_icon": {
            "16": "images/replacely16.png",
            "32": "images/replacely32.png",
            "48": "images/replacely48.png",
            "128": "images/replacely128.png"
        },
        "icons": {
            "16": "images/replacely16.png",
            "32": "images/replacely32.png",
            "48": "images/replacely48.png",
            "128": "images/replacely128.png"
        }
    },
    "permissions": [
        "tabs", "storage", "activeTab"
     ],
     "host_permissions": [
        "<all_urls>"
      ]
    
      
}